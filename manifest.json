{
    "manifest_version": 3,
    "name": "Auto Scroller",
    "version": "1.0",
    "description": "Automatically scroll the page with adjustable speed and direction.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}